rule audio_bath_rule
when
    Item LI_OG_BA received update
then
    sendCommand(SqueezeBadPower, LI_OG_BA.state.toString)
end


rule audio_wc_rule
when
    Item LI_EG_WC received update
then
    sendCommand(SqueezeWCPower, LI_EG_WC.state.toString)
end


rule audio_amp_on
when
    Item SqueezeEZPower changed to ON
then
    executeCommandLine(Duration.ofSeconds(2), "wget", "http://192.168.178.40/goform/formiPhoneAppPower.xml?1+PowerOn")
end


rule audio_amp_off
when
    Item SqueezeEZPower changed to OFF
then
    executeCommandLine(Duration.ofSeconds(2), "wget", "http://192.168.178.40/goform/formiPhoneAppPower.xml?1+PowerStandby")
end
